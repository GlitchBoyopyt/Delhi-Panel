<%- include('./components/template') %>

<!-- Main Content -->
<main class="flex-grow container mx-auto px-4 py-8 bg-[#1f1e1e] text-neutral-100" x-data="store()">
    <div class="flex justify-between items-center w-full mx-auto pb-4">
        <div class="flex flex-col">
            <h1 class="text-xl font-semibold mb-0.5" style="font-family: 'Cabin';">Store</h1>
            <p class="text-gray-400 text-md">Use your Coins to upgrade your servers by purchasing resources!</p>
        </div>

        <nav aria-label="Breadcrumb" class="inline-flex py-2 px-4 rounded-xl bg-white/10 transition duration-200">
            <ol class="flex items-center space-x-2">
                <li>
                    <a href="/dashboard" class="text-sm flex items-center gap-2 text-gray-300 hover:text-white transition duration-200">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
                            <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                            <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                        </svg>
                        <span>Home</span>
                    </a>
                </li>
                <li class="flex items-center text-gray-300">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
                        <path d="M9 6l6 6l-6 6"></path>
                    </svg>
                </li>
                <li>
                    <a href="#" class="text-sm font-medium text-white/80 hover:text-white transition duration-200">
                        Store | Coins: <%= coins %>
                    </a>
                </li>
            </ol>
        </nav>
    </div>

    <!-- Store Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-6">
        <!-- RAM Card -->
        <div class="bg-[#2c2b2b] rounded-xl p-6 border border-gray-700 shadow-md">
            <h3 class="text-xl font-semibold mb-3">RAM</h3>
            <p class="text-gray-400 mb-4">Upgrade your server's memory</p>
            <div class="flex justify-between items-center mb-4">
                <span class="text-lg font-medium text-white">150 Coins / GB</span>
            </div>
            <button @click="buyRAM()" class="w-full bg-blue-500 font-medium text-white py-2 rounded-md hover:bg-blue-600 transition duration-200">
                Buy RAM
            </button>
        </div>

        <!-- CPU Card -->
        <div class="bg-[#2c2b2b] rounded-xl p-6 border border-gray-700 shadow-md">
            <h3 class="text-xl font-semibold mb-3">CPU</h3>
            <p class="text-gray-400 mb-4">Boost your processing power</p>
            <div class="flex justify-between items-center mb-4">
                <span class="text-lg font-medium text-white">200 Coins / Core</span>
            </div>
            <button @click="buyCPU()" class="w-full bg-blue-500 font-medium text-white py-2 rounded-md hover:bg-blue-600 transition duration-200">
                Buy CPU
            </button>
        </div>
    </div>
</main>

<script>
function store() {
    return {
        buyRAM() {
            window.location.href = `/buyresource/ram`;
        },
        buyCPU() {
            window.location.href = `/buyresource/cpu`;
        }
    };
}
</script>

<!-- Footer -->
<%- include('./components/footer') %>
