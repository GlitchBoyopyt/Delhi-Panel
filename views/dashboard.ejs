<div>
  <%- include('./components/template') %>

  <!-- Main Content -->
  <main class="container flex-grow px-4 py-8 mx-auto">
    <div class="flex items-center justify-between w-full pb-4 mx-auto">
      
      <!-- Welcome text on the left -->
      <div class="flex flex-col">
        <h1 class="text-2xl font-bold text-white" style="font-family: 'Cabin';">Dashboard</h1>
        <p class="text-gray-400 text-md">View your available resources and an overview of your account.</p>
      </div>

      <!-- Breadcrumbs on the right -->
      <nav aria-label="Breadcrumb" class="inline-flex px-4 py-2 rounded-xl bg-white/10 backdrop-blur-md shadow-md">
        <ol class="flex items-center space-x-2">
          <li>
            <a href="/" class="flex items-center gap-2 text-sm text-zinc-400 hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                   stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                   class="icon icon-tabler icon-tabler-home w-5 h-5">
                <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
                <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
              </svg>
              <span>Home</span>
            </a>
          </li>
          <li class="flex items-center text-white/60">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                 class="w-4 h-4">
              <path d="M9 6l6 6l-6 6"></path>
            </svg>
          </li>
          <li>
            <span class="text-sm text-white/80">Dashboard</span>
          </li>
        </ol>
      </nav>
    </div>

    <!-- Welcome Message & Quick Actions -->
    <div class="w-full mt-6 mb-8 p-6 border-l-4 border-blue-500 bg-blue-600/15 rounded-xl">
      <h2 class="text-lg font-semibold text-white">Welcome back!</h2>
      <p class="text-sm text-white/70 mt-2">
        From the <%= name %> dashboard, you can manage your wallet, deploy servers, and upgrade resources.
      </p>
      <a href="/create-server"
         class="inline-flex mt-4 items-center px-5 py-3 bg-blue-700 text-white font-semibold rounded-full hover:bg-blue-600 transition-transform transform hover:scale-105 shadow-md">
        Get Started
      </a>
    </div>

    <!-- Announcements -->
    <% if (announcement) { %>
      <div class="flex items-start gap-4 p-4 bg-white/10 border border-white/20 rounded-xl shadow-md">
        <div class="shrink-0">
          <% if (announcement.type === 'warn') { %>
            <svg class="w-6 h-6 text-yellow-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                 stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z"/>
            </svg>
          <% } else if (announcement.type === 'status') { %>
            <svg class="w-6 h-6 text-green-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                 stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round"
                    d="M7.5 14.25v2.25m3-4.5v4.5m3-6.75v6.75m3-9v9M6 20.25h12A2.25 2.25 0 0 0 20.25 18V6A2.25 2.25 0 0 0 18 3.75H6A2.25 2.25 0 0 0 3.75 6v12A2.25 2.25 0 0 0 6 20.25Z"/>
            </svg>
          <% } %>
        </div>
        <div>
          <h3 class="text-md font-semibold text-white"><%= announcement.title %></h3>
          <p class="text-sm text-white/70"><%= announcement.description %></p>
        </div>
      </div>
    <% } %>

    <!-- Resources Overview -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mt-6">
      <div class="p-6 bg-white/10 border border-white/20 rounded-xl shadow-md">
        <h4 class="text-white text-md font-semibold">Total RAM</h4>
        <p class="text-2xl font-bold text-blue-500"><%= max_resources.ram %> MiB</p>
      </div>
      <div class="p-6 bg-white/10 border border-white/20 rounded-xl shadow-md">
        <h4 class="text-white text-md font-semibold">Total CPU</h4>
        <p class="text-2xl font-bold text-blue-500"><%= max_resources.cores %> Cores</p>
      </div>
      <div class="p-6 bg-white/10 border border-white/20 rounded-xl shadow-md">
        <h4 class="text-white text-md font-semibold">Total Disk</h4>
        <p class="text-2xl font-bold text-blue-500"><%= max_resources.disk %> GiB</p>
      </div>
    </div>

  </main>

  <%- include('./components/footer') %>
</div>
